package require -exact qsys 12.1
set_validation_property AUTOMATIC_VALIDATION false

add_instance single_kernel_system single_kernel_system

add_connection acl_iface.kernel_clk single_kernel_system.clock_reset
add_connection acl_iface.kernel_clk2x single_kernel_system.clock_reset2x
add_connection acl_iface.kernel_reset single_kernel_system.clock_reset_reset

add_connection single_kernel_system.avm_memgmem0_port_0_0_rw acl_iface.kernel_mem0
add_connection single_kernel_system.avm_memgmem0_port_1_0_rw acl_iface.kernel_mem1
add_connection acl_iface.kernel_irq single_kernel_system.kernel_irq

add_instance cra_root cra_ring_root
set_instance_parameter_value cra_root DATA_W 64
set_instance_parameter_value cra_root ADDR_W 5
set_instance_parameter_value cra_root ID_W 0
add_connection acl_iface.kernel_clk cra_root.clock
add_connection acl_iface.kernel_reset cra_root.reset

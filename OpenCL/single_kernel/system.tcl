set_instance_parameter_value avs_genetic_algorithm_cra_cra_ring RING_ADDR_W 5
set_instance_parameter_value avs_genetic_algorithm_cra_cra_ring CRA_ADDR_W 5
set_instance_parameter_value avs_genetic_algorithm_cra_cra_ring ID_W 0
set_instance_parameter_value avs_genetic_algorithm_cra_cra_ring ID 0
add_connection acl_iface.kernel_clk avs_genetic_algorithm_cra_cra_ring.clock
add_connection acl_iface.kernel_reset avs_genetic_algorithm_cra_cra_ring.reset
add_connection cra_root.ring_out avs_genetic_algorithm_cra_cra_ring.ring_in
add_connection avs_genetic_algorithm_cra_cra_ring.cra_master single_kernel_system.avs_genetic_algorithm_cra
set_connection_parameter_value avs_genetic_algorithm_cra_cra_ring.cra_master/single_kernel_system.avs_genetic_algorithm_cra baseAddress "0x0"
add_connection avs_genetic_algorithm_cra_cra_ring.ring_out cra_root.ring_in


save_system
